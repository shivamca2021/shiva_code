<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <data>
        <record id="hr_equipment_view_form_dfm" model="ir.ui.view">
            <field name="name">hr.equipment.form.inherit.dfm</field>
            <field name="model">maintenance.equipment</field>
            <field name="inherit_id" ref="maintenance.hr_equipment_view_form" />
            <field name="arch" type="xml">
                <xpath expr="//field[@name='warranty_date']" position="after">
                    <field name="purchase_date"/>
                    <field name="place_of_purchase"/>
                    <field name="function_of_machine"/>
                    <field name="machine_capacity"/>
                    <field name="set_up_time"/>
                </xpath>
            </field>
        </record>
    </data>
</odoo>