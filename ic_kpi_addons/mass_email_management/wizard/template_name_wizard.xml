<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <data>
        <!--  Form View  -->
        <record id="view_template_name_wizard_form" model="ir.ui.view">
            <field name="name">template.name.wizard.form</field>
            <field name="model">template.name.wizard</field>
            <field name="arch" type="xml">
                <form >
                    <sheet>
                        <group>
                            <field name="name"/>
                            <field name="mailing_id" invisible="1"/>

                        </group>
                    </sheet>
                    <footer>
                         <button string='Save' name="save_template" type='object' class='btn-primary'/>
                    <button string="Cancel" class="btn-secondary" special="cancel"/>
                    </footer>
                </form>
            </field>
        </record>


    </data>
</odoo>
